{
    "name": "capixabay-backend",
    "version": "1.0.0",
    "main": "dist/server.js",
    "scripts": {
        "dev": "cross-env NODE_ENV=DEV nodemon --watch src --ext ts,json --exec ts-node -r tsconfig-paths/register src/Server.ts",
        "local-prod": "npm run build && npm run deploy-local-prod",
        "prod": "npm run build && npm run deploy-prod",
        "build": "tsc -b && tsc-alias",
        "deploy-local-prod": "bash ./deploy.sh LOCAL-PROD",
        "deploy-prod": "bash ./deploy.sh PROD",
        "check-os-imports": "npx tsc --noEmit",
        "local-prod-test": "cross-env NODE_ENV=LOCAL-PROD node dist/Server.js"
    },
    "type": "commonjs",
    "dependencies": {
        "dotenv": "^16.5.0",
        "express": "^5.1.0",
        "jsonwebtoken": "^9.0.2",
        "module-alias": "^2.2.3",
        "mongodb": "^6.16.0",
        "nodemailer": "^7.0.3",
        "socket.io": "^4.8.1",
        "strip-json-comments": "^5.0.2"
    },
    "devDependencies": {
        "@types/express": "^5.0.3",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/module-alias": "^2.0.4",
        "@types/node": "^22.15.29",
        "@types/nodemailer": "^6.4.17",
        "@types/socket.io": "^3.0.1",
        "cross-env": "^7.0.3",
        "nodemon": "^3.1.10",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.16",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.8.3"
    }
}
